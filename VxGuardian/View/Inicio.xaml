<Window x:Class="VxGuardian.View.Inicio"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VxGuardian.View"
        mc:Ignorable="d"
        Title="VxGuardian" Height="220" Width="200" Topmost="True" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None">
  <Grid>
    <StackPanel Margin="10">
      <Label Content="Elige el Modo del VxGuardian" HorizontalAlignment="Center" Margin="0,0,0,10"/>
      <RadioButton HorizontalAlignment="Center" Margin="5" Content="VoxCms"  Name="RBtnVoxCMS"/>
      <RadioButton HorizontalAlignment="Center" Margin="5" Content="Local" Name="RBtnLocal" />
      <RadioButton HorizontalAlignment="Center" Margin="5" Content="Guardian" Name="RBtnFTP" Checked="RBtnFTP_Checked"/>
      <RadioButton HorizontalAlignment="Center" Margin="5" Content="Pivote" Name="RBtnPivote" />
      <Button Height="50" Content="Siguiente" Margin="10" Name="BtnSiguiente" Click="BtnSiguiente_Click"/>
    </StackPanel>

  </Grid>
</Window>
